<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" stylesheets="@Style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.jobswap.Controllers.LoginController">

   <!-- Top Banner -->
   <top>
      <HBox alignment="CENTER_LEFT" prefHeight="100.0" styleClass="top-bar">
         <padding>
            <Insets left="30.0" right="30.0" />
         </padding>
         <children>
            <Label styleClass="header-title" text="JobSwap" />
         </children>
      </HBox>
   </top>

   <!-- Login Form -->
   <center>
      <VBox alignment="CENTER" spacing="20.0">
         <padding>
            <Insets bottom="50.0" left="100.0" right="100.0" top="50.0" />
         </padding>
         <children>
            <TextField fx:id="employeeIDFields" maxWidth="300.0" promptText="Enter your Employee ID" />
            <PasswordField fx:id="passwordField" maxWidth="300.0" promptText="Enter your Password" />
            <Button fx:id="loginButton" minWidth="150.0" onAction="#login" text="Log In" />
            <Button minWidth="150.0" onAction="#SceneShiftToCreateAccount" text="Create a New Account" />
         </children>
      </VBox>
   </center>
</BorderPane>
