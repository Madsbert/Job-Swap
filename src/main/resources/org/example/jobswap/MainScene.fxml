<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<BorderPane prefHeight="800" prefWidth="1200.0" stylesheets="@Style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.jobswap.Controllers.MainSceneController">

    <!-- Top Banner -->
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="100.0" styleClass="top-bar">
            <padding>
                <Insets left="30.0" right="30.0" />
            </padding>
            <children>
                <Label styleClass="header-title" text="JobSwap" />
                <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="usernameLabel" prefHeight="100.0" prefWidth="138.0" styleClass="username-title">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
            </Label>
            <Button fx:id="logoutButton" mnemonicParsing="false" text="Logout">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin></Button>
                <Button minWidth="80.0" text="Help" />
            </children>
        </HBox>
    </top>

    <!-- Tabs Area -->
    <center>
        <TabPane fx:id="tabPane" prefHeight="646.0" prefWidth="1139.0" tabClosingPolicy="UNAVAILABLE" />
    </center>
</BorderPane>
