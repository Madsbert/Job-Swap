<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:controller="org.example.jobswap.Controllers.MainSceneController" prefHeight="800" prefWidth="1200.0" stylesheets="@Style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">

    <!-- Top Banner -->
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="100.0" styleClass="top-bar">
            <padding>
                <Insets left="30.0" right="30.0" />
            </padding>
            <children>
                <Label styleClass="header-title" text="JobSwap" />
                <Region HBox.hgrow="ALWAYS" />
                <Button minWidth="80.0" text="Help" />
            </children>
        </HBox>
    </top>

    <!-- Tabs Area -->
    <center>
        <TabPane fx:id="tabPane" prefHeight="646.0" prefWidth="1139.0" tabClosingPolicy="UNAVAILABLE" />
    </center>
</BorderPane>
