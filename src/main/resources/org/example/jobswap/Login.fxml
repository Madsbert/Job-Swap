<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.jobswap.View.JobswapApplication"
            stylesheets="@Style.css"
            prefHeight="852.0" prefWidth="1298.0">

   <!-- Top Banner -->
   <top>
      <HBox alignment="CENTER_LEFT" styleClass="top-bar" prefHeight="100.0">
         <padding>
            <Insets left="30.0" right="30.0"/>
         </padding>
         <children>
            <Label text="JobSwap" styleClass="header-title" />
         </children>
      </HBox>
   </top>

   <!-- Login Form -->
   <center>
      <VBox spacing="20.0" alignment="CENTER">
         <padding>
            <Insets top="50.0" bottom="50.0" left="100.0" right="100.0"/>
         </padding>
         <children>
            <TextField promptText="Enter your Employee ID" maxWidth="300.0" />
            <PasswordField promptText="Enter your Password" maxWidth="300.0" />
            <Button text="Log In" minWidth="150.0"/>
            <Button text="Create a New Account" minWidth="150.0"/>
         </children>
      </VBox>
   </center>
</BorderPane>